{
	"name": "authorization",
	"version": "1.0.0",
	"description": "Simple REST API to store users and addresses, with authorization made with JWT.",
	"main": "dist/src/app.js",
	"scripts": {
		"clean": "rimraf dist",
		"build": "npm run clean && tsc",
		"watch": "tsc -w",
		"dev:setup": "knex --knexfile knexfile.ts migrate:latest --env development && knex --knexfile knexfile.ts seed:run --env development",
		"dev:start": "nodemon dist/src/server.js",
		"dev": "concurrently \"npm run watch\" \"npm run dev:start\"",
		"stg:setup": "knex --knexfile knexfile.ts migrate:latest --env staging && knex --knexfile knexfile.ts seed:run --env staging",
		"stg:start": "node dist/server.js",
		"prd:setup": "knex --knexfile knexfile.ts migrate:latest --env production && knex --knexfile knexfile.ts seed:run --env production",
		"prd:start": "node dist/server.js",
		"start": "node dist/server.js"
	},
	"keywords": [
		"REST",
		"API",
		"Knex",
		"Express",
		"TypeScript",
		"Authorization",
		"JWT",
		"SQL",
		"SQLite3",
		"PostgreSQL"
	],
	"author": "Helder Chaves Leite Junior",
	"license": "ISC",
	"devDependencies": {
		"@types/bcrypt": "^3.0.1",
		"@types/bcryptjs": "^2.4.6",
		"@types/cookie-parser": "^1.4.7",
		"@types/cors": "^2.8.10",
		"@types/express": "^4.17.11",
		"@types/hpp": "^0.2.6",
		"@types/jsonwebtoken": "^8.5.1",
		"@types/morgan": "^1.9.9",
		"@types/nodemailer": "^6.4.15",
		"@types/pg": "^8.11.6",
		"@types/sanitize-html": "^2.11.0",
		"concurrently": "^8.2.2",
		"cookie-parser": "^1.4.6",
		"nodemon": "^3.1.4",
		"prettier": "3.3.2",
		"rimraf": "^6.0.1",
		"ts-node": "^9.1.1",
		"ts-node-dev": "^1.1.6",
		"typescript": "^5.5.4"
	},
	"dependencies": {
		"@types/validator": "^13.12.0",
		"bcrypt": "^5.0.1",
		"bcryptjs": "^2.4.3",
		"cors": "^2.8.5",
		"dotenv": "^8.2.0",
		"email-validator": "^2.0.4",
		"express": "^4.19.2",
		"express-rate-limit": "^7.4.0",
		"helmet": "^7.1.0",
		"hpp": "^0.2.3",
		"jsonwebtoken": "^9.0.2",
		"knex": "^3.1.0",
		"morgan": "^1.10.0",
		"nodemailer": "^6.9.14",
		"pg": "^8.12.0",
		"sanitize-html": "^2.13.0",
		"validator": "^13.12.0",
		"xss-clean": "^0.1.4"
	}
}
